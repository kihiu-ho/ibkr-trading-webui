# =============================================================================
# IBKR Trading WebApp Configuration Template
# =============================================================================
# Copy this file to .env in the project root and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# IBKR Configuration
# =============================================================================
IBKR_ACCOUNT_ID=U1234567
IBKR_API_BASE_URL=https://127.0.0.1:5055/v1/api
IBKR_SSL_VERIFY=false

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://ibkr_user:your_password@postgres:5432/ibkr_trading
POSTGRES_USER=ibkr_user
POSTGRES_PASSWORD=your_password
POSTGRES_DB=ibkr_trading
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# MinIO / S3 Storage Configuration
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=trading-charts
MINIO_SECURE=false

# =============================================================================
# OpenAI-Compatible API Configuration
# =============================================================================
# For OpenAI:
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# For Google Gemini:
# OPENAI_API_BASE=https://generativelanguage.googleapis.com/v1beta/openai/
# OPENAI_API_KEY=your-google-api-key
# OPENAI_MODEL=gemini-2.0-flash-exp

AI_REQUEST_TIMEOUT=120

# =============================================================================
# Application Configuration
# =============================================================================
BACKEND_PORT=8000
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Risk Management Configuration
# =============================================================================
MIN_R_COEFFICIENT=1.0
MIN_PROFIT_MARGIN=0.05
RISK_PER_TRADE=0.01
MAX_PORTFOLIO_EXPOSURE=0.90
MAX_OPEN_POSITIONS=10
MAX_POSITION_SIZE=0.20

# =============================================================================
# Trading Configuration
# =============================================================================
DEFAULT_TIF=DAY
DEFAULT_ORDER_TYPE=LMT
WORKFLOW_DELAY_SECONDS=60

# =============================================================================
# Feature Flags
# =============================================================================
AUTO_TRADING_ENABLED=false
PAPER_TRADING_MODE=true

