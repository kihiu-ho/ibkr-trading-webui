{
  "name": "ibkr-workflow-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for IBKR Trading Workflow Platform",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen",
    "install:browsers": "playwright install",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:ci": "playwright test --reporter=github",
    "test:visual": "playwright test --grep='@visual'",
    "test:api": "playwright test --grep='@api'",
    "test:e2e": "playwright test --grep='@e2e'",
    "test:smoke": "playwright test --grep='@smoke'",
    "update-snapshots": "playwright test --update-snapshots"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.0",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6",
    "@faker-js/faker": "^8.2.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "ws": "^8.14.0"
  }
}
